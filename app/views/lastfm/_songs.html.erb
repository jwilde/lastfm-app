<center>
<h3> recent tracks </h3>
<table>
<tr>
<% @songs.each_with_index do |song,index|%>
<th>
	<div style="border: thin solid black; width: 100px; height: 100px; margin: 5px; padding: 5px; background-color:white">
		<div align="center"> 
			<a class="infobox" href="#"><img src="<%=song.image%>" width="100" height="100"> 
				<span><%= song.name%> <br/><small><%= song.artist%> <br/> <%= song.album%></small>
				</span></a>
		</div>
	</div>
	<%if (index+1)%10==0%>
		</tr>
		<tr>
	<%end%>
</th>
<%end%>
</tr>
</table>
</center>